					{
						if (board[i + 1][j + 2] == w)
						{
							r = w;
							break;
						}
					}
					BlackCheck();
					if (bCheck == true)
					{
						cout << "Cannot endanger the king!" << endl;
						board[i + 1][j + 2] = r;
						board[i][j] = 26;
						return;
					}
					i += 100;
					j += 100;
					contb = true;
				}
			}
		}
