						board[i][j] = 15;
						return;
					}
					i += 100;
					j += 100;
					contw = true;
				}
			}
		}
	}
}
void Bnr()
{
	cout << "Right Knight" << endl;
	cout << "Direction (q,w,a,s) :";
	char d;
	cin >> d;
	if (d == 'p')
		return;
	int token = 0;
	int a, count = 0;
	for (int i = 0; i < 8; i++)
	{
		for (int j = 0; j < 8; j++)
		{
			if (board[i][j] == 31)//(locate)
			{
				for (a = 17; a <= 32; a++)
				{
					if (board[i - 2][j - 1] == a || board[i - 1][j - 2] == a || board[i + 2][j - 1] == a || board[i + 1][j - 2] == a ||
						board[i - 1][j + 2] == a || board[i - 2][j + 1] == a || board[i + 2][j + 1] == a || board[i + 1][j + 2] == a)
					{
						count++;
					}
				}
				for (a = 70; a <= 101; a++)
				{
					if (board[i - 2][j - 1] == a || board[i - 1][j - 2] == a || board[i + 2][j - 1] == a || board[i + 1][j - 2] == a ||
						board[i - 1][j + 2] == a || board[i - 2][j + 1] == a || board[i + 2][j + 1] == a || board[i + 1][j + 2] == a)
					{
						count++;
					}
				}
				if (i - 1 < 0)
					count++;
				if (j - 1 < 0)
					count++;
				if (i - 2 < 0)
					count++;
				if (j - 2 < 0)
					count++;
				if (i + 1 > 7)
					count++;
				if (j + 1 > 7)
					count++;
				if (i + 2 > 7)
					count++;
				if (j + 2 > 7)
					count++;
				if (count >= 8)//(grounded)
				{
					cout << "Unable to move" << endl;
					return;
				}
				if (d == 'q')
				{
					cout << "Major Up or Left (u,l) : ";
					char q;
					cin >> q;
