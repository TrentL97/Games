						board[i - 2][j + 1] = r;
						board[i][j] = 15;
						return;
					}
					i += 100;
					j += 100;
					contw = true;
				}
				else if (token == 4)
				{
					board[i - 1][j + 2] = 15;
					board[i][j] = 0;
					for (int w = 0; w < 102; w++)//(checkCheck)
					{
