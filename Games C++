				{
					board[i + 1][j - 2] = 15;
					board[i][j] = 0;
					for (int w = 0; w < 102; w++)//(checkCheck)
					{
						if (board[i + 1][j - 2] == w)
						{
							r = w;
							break;
						}
					}
