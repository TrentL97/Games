				}
				else if (d == 'a')
				{
					cout << "Left:" << endl;
					if (j - n < 0)
					{
						cout << "Outside Map" << endl; //(boundary2)
						i += 100;
						j += 100;
						Brl();
					}
					for (q = j - 1; q >= (j - n + 1); q--)
					{
