							r = w;
							break;
						}
					}
					WhiteCheck();
					if (wCheck == true)
					{
						cout << "Cannot endanger the king!" << endl;
						board[i - 1][j - 2] = r;
						board[i][j] = 15;
						return;
					}
					i += 100;
					j += 100;
					contw = true;
				}
				else if (token == 3)
				{
					board[i - 2][j + 1] = 15;
					board[i][j] = 0;
					for (int w = 0; w < 102; w++)//(checkCheck)
					{
