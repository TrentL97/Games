					j += 100;
					contw = true;
				}
				else if (token == 7)//(checkCheck)
				{
					board[i + 2][j + 1] = 15;
					board[i][j] = 0;
					for (int w = 0; w < 102; w++)
					{
						if (board[i + 2][j + 1] == w)
						{
							r = w;
							break;
