					{
						board[i - 1][j] = 57;
						board[i][j] = 0;
					}
					else if (c == 'n')
					{
						board[i - 1][j] = 58;
						board[i][j] = 0;
					}
					else if (c == 'b')
					{
						board[i - 1][j] = 59;
						board[i][j] = 0;
					}
					else if (c == 'q')
					{
						board[i - 1][j] = 60;
						board[i][j] = 0;
					}
				}
				contw = true;
				i += 100;
				j += 100;
				d = 0;
			}
		}
	}
}
void Wp8()
{
	wCheck = false;
	int q = 0;
	int token = 0;
	for (int i = 0; i < 8; i++)
	{
		for (int j = 0; j < 8; j++)
		{
			if (board[i][j] == 8)//(locate)
			{
				int left = 0, right = 0, center = 0, a = 0;
				char d;
				if (board[i -1][j] == 0)
					center = 1;
				for (a = 17; a <= 28; a++) //Checks for enemy pieces to take (aside from king)
				{
					if (board[i - 1][j - 1] == a)
					{
						left = 1;
					}
