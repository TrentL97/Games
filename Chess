						board[i][j] = 10;
						return;
					}
					i += 100;
					j += 100;
					contw = true;
				}
				else if (token == 5)
				{
					board[i + 2][j - 1] = 10;
					board[i][j] = 0;
					for (int w = 0; w < 102; w++)//(checkCheck)
					{
						if (board[i + 2][j - 1] == w)
						{
							r = w;
							break;
						}
					}
