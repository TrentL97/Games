{
	bCheck = false;
	int q = 0;
	int token = 0;
	for (int i = 0; i < 8; i++)
	{
		for (int j = 0; j < 8; j++)
		{
			if (board[i][j] == 23)
			{
				int left = 0, right = 0, center = 0, a = 0;
				char d;
